[init]
    defaultBranch = 'main'

[commit]
    verbose = true

[alias]
	unstage = restore --staged
	relate-to = log --follow --

[help]
	autocorrect = 0

[status]
    relativePaths = false
    branch = true
    showStash = true

[color "status"]
    added = green
    changed = yellow
    deleted = red
    untracked = cyan

[advice]
    statusHints = false

