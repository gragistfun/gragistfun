[init]
    defaultBranch = main

[commit]
    verbose = true

[alias]
    git = !git # typo tolerant: git git ... -> git ...
    lg = log --oneline
    ls = ls-files
    relate-to = log --follow --
    unstage = restore --staged

[help]
	autocorrect = 0

[status]
    relativePaths = false
    branch = true
    showStash = true
    submoduleSummary = true

[color "status"]
    added = green
    changed = yellow
    deleted = red
    untracked = cyan

[advice]
    statusHints = false

