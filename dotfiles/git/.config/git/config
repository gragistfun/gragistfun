[core]
    pager = delta

[init]
    defaultBranch = main

[commit]
    verbose = true

[alias]
    git = !git # typo tolerant: git git ... -> git ...
    lg = log --oneline
    ls = ls-files
    relate-to = log --follow --
    unstage = restore --staged

[help]
    autocorrect = 0

[status]
    relativePaths = false
    branch = true
    showStash = true
    submoduleSummary = true

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[color "status"]
    added = green
    changed = yellow
    deleted = red
    untracked = cyan

[advice]
    statusHints = false

[interactive]
    diffFilter = delta --color-only

[delta]
    syntax-theme = 'Dracula'
    navigate = true    # use n and N to move between diff sections

